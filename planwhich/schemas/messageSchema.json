{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Message",
    "description": "A message in the system",
    "type": "object",
    "properties": {
        "projectID": {
            "type": "string",
            "description": "ID of the project this message belongs to"
        },
        "messageID": {
            "type": "string",
            "description": "Unique identifier for message"
        },
        "senderID": {
            "type": "string",
            "description": "User ID of the sender"
        },
        "recipientID": {
            "type": "string",
            "description": "User ID of the recipient"
        },
        "content": {
            "type": "string",
            "description": "Content of the message"
        },
        "timestamp": {
            "type": "string",
            "description": "Time the message was sent",
            "format": "date-time"
        }
    },
    "required": ["projectID", "messageID", "senderID", "recipientID", "content", "timestamp"]
}